<div class="table-responsive">
	<div align="right">
		<%= link_to 'AddStore', new_store_url, class: "btn btn-primary" %>
	</div>
<table class="table table-striped">
<thead>
	<tr>
		<th> Logo </th>
		<th> Name </th>
		<th> Brand </th>
		<th> Location </th>
		<th> City </th>
		<th> State </th>
		<th> Country </th>
		<th> Pincode </th>
		<th> Phone Number</th>
		<th> Merchant </th>
		<th> Updated_At </th>
		<th>Action</th>
	</tr>
	</thead>
	
	<tbody>
	<% @stores.each do |store|%>
	<tr>
		<td><%= image_tag store.logo.url(:thumb) %></td>
		<td><%= store.name %></td>
		<td><%= store.brand %></td>
		<td><%= store.store_location %></td>
		<td><%= store.city %></td>
		<td><%= store.state %></td>
		<td><%= store.country %></td>
		<td><%= store.pincode %></td>
		<td><%= store.phoneno %></td>
		<td><%= store.merchant %></td>
		<td><%= store.updated_at %></td>
		<td> <%= link_to 'view', store_url(store.id) %>|<%= link_to 'Edit', edit_store_path(store) %>|<%= link_to 'Delete', store_path(store),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

	</tr>
	<% end %>
	</tbody>
</table>
</div>