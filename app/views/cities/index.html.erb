<div class="table-responsive">
  <h1> New Cities </h1>
  <div class="row">
    <div class="col-md-6">
      <%= form_tag(cities_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Cities", class: "form-control"%>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

   <div align="right">
      <%= link_to 'Addcity', new_city_url, class: "btn btn-primary" %>
  </div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Latitude</th>
    <th>Lonitude</th>
    <th colspan="2"> Action </th>
  </tr>
  </thead>

 <tbody>
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= city.latitude %></td>
      <td><%= city.longitude %></td>
      <td><%= link_to 'view', city_path(city) %>|<%= link_to 'Edit', edit_city_path(city) %>|<%= link_to 'Delete', cities_url,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
